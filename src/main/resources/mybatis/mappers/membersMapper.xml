<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.rcp.mapper.MembersMapper">

	<select id="findByEmail" parameterType = "String" resultType="com.example.rcp.domain.LoginMember">
	SELECT member_id,member_name,member_email,member_password,member_auth FROM members WHERE member_email = #{email}
	</select>
    

	<select id="findById" parameterType = "int" resultType="com.example.rcp.domain.Members">
	SELECT * FROM members WHERE member_id = #{id}
	</select>
	
</mapper>
    

    